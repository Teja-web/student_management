pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Teja-web/student_management.git'
            }
        }
        
        stage('Setup Python') {
            steps {
                bat 'python --version'
                bat 'pip --version'
            }
        }
        
        stage('Run Python Files') {
            steps {
                bat 'python student.py'
                bat 'python login.py'
                bat 'python marks.py'
                bat 'python attendance.py'
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline completed'
        }
        success {
            echo 'All Python files executed successfully'
        }
        failure {
            echo 'Pipeline failed'
        }
    }
}
